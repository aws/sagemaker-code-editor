+                status: 'in-progress',
+                message: 'Processing message'
+            });
+
+            activate(mockContext);
+            getWatcherCallback('add')('test-path');
+
+            expect(vscode.window.showInformationMessage).toHaveBeenCalledWith('Processing message');
